<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hopital_layout"
    android:layout_width="wrap_content"
    android:layout_height="210dp"
    android:orientation="horizontal"
    android:dividerHeight="1px"
    android:background="@drawable/listview_item_border"
    android:layout_marginTop="5dp"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="298dp"
        android:layout_height="268dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="92dp"
            android:layout_gravity="center"
            android:layout_marginTop="37dp"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="13dp"
        android:layout_height="182dp"
        android:orientation="horizontal">

        <View
            android:id="@+id/divider2"
            android:layout_width="97dp"
            android:layout_height="175dp"
            android:layout_marginLeft="-10dp"
            android:layout_marginTop="26dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="?android:attr/listDivider" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="591dp"
        android:layout_height="190dp"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">


        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">


            <TextView
                android:id="@+id/hopital_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mosquée Hassan 2"
                android:textSize="25dp"
                android:textStyle="bold"


                />
        </HorizontalScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hopital_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:text="privé"
                android:textColor="@color/distance" />

            <TextView
                android:id="@+id/distance1"
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:textColor="@color/distance" />

        </LinearLayout>


        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="229dp"
            android:layout_height="44dp"
            android:layout_marginLeft="-7dp"
            android:isIndicator="true" />

        <LinearLayout
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="40dp"
                android:layout_height="14dp"
                android:layout_marginLeft="-6dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                tools:ignore="DuplicateIds"
                tools:srcCompat="@drawable/marker_red" />

            <ScrollView
                android:layout_width="187dp"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/hopital_adress"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:text="TextView" />
            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="40dp"
                    android:layout_height="19dp"
                    android:layout_marginLeft="-6dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    tools:srcCompat="@android:drawable/sym_action_call" />

                <TextView
                    android:id="@+id/hopital_tel"
                    android:layout_width="553dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:text="TextView"
                    tools:ignore="DuplicateIds" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/longitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:visibility="gone"

            />

        <TextView
            android:id="@+id/latitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:visibility="gone"

            />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"></HorizontalScrollView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" />


        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

    </LinearLayout>


</LinearLayout>

