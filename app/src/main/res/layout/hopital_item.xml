<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="390dp"
    android:id="@+id/hopital_layout"
    android:layout_height="190dp"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="13dp"
    android:layout_marginRight="9dp"

    >
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="190dp"
    android:orientation="horizontal"
    android:dividerHeight="1px"
    android:background="@drawable/listview_item_border"
    android:layout_marginTop="5dp"
    >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="144dp"
            android:layout_height="153dp"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="182dp"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:layout_width="256dp"
        android:layout_height="190dp"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">


        <HorizontalScrollView
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">
            <TextView
                android:id="@+id/hopital_name"
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:text="Mosquée Hassan 2"
                android:textSize="20dp"
                android:textStyle="bold"


                />
        </HorizontalScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hopital_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:text="privé"
                android:textColor="@color/distance" />

            <TextView
                android:id="@+id/distance1"
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:textColor="@color/distance" />

        </LinearLayout>


        <RatingBar
            android:id="@+id/ratingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:progressTint="@color/golden"/>


        <LinearLayout
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="40dp"
                android:layout_height="19dp"
                android:layout_marginLeft="-6dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                tools:ignore="DuplicateIds"
                tools:srcCompat="@drawable/marker_red" />

            <ScrollView
                android:layout_width="194dp"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/hopital_adress"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:text="TextView" />
            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="40dp"
                    android:layout_height="19dp"
                    android:layout_marginLeft="-6dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:src="@drawable/phone_green" />

                <TextView
                    android:id="@+id/hopital_tel"
                    android:layout_width="221dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:text="TextView"
                    tools:ignore="DuplicateIds" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/longitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:visibility="gone"

            />

        <TextView
            android:id="@+id/latitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:visibility="gone"

            />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"></HorizontalScrollView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" />


        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

    </LinearLayout>


</LinearLayout>

</androidx.cardview.widget.CardView>